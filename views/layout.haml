      .overlay { width: 100%; height: 100%; position: absolute; top: 0; left: 0; background: rgba(0, 0, 0, 0.5); }
      .content { 
        width: 998px; 
        margin: 0 auto; 
        padding: 40px 120px; 
        z-index: 10; 
        background: rgba(1, 0, 26, 0.4); 
        
        font-size: 1.4em;
        line-height: 1.6;
        color: #fff;
      }
      h1 { color: #7e6da0; font-size: 1.4em; }
      p {
        margin: 20px 0;
        text-align: left;
      }
      a {
        color: #7e6da0;
        text-decoration: none;
        border-bottom: 1px dashed #7e6da0;
      }
      .addthis_toolbox a { border-bottom: none; }

